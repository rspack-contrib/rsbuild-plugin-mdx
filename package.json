{
	"name": "@rsbuild/plugin-mdx",
	"version": "1.0.1",
	"repository": "https://github.com/rspack-contrib/rsbuild-plugin-mdx",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"lint:write": "biome check . --write",
		"prepare": "simple-git-hooks && npm run build",
		"test": "playwright test"
	},
	"simple-git-hooks": {
		"pre-commit": "npx nano-staged"
	},
	"nano-staged": {
		"*.{js,jsx,ts,tsx,mjs,cjs}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@mdx-js/loader": "^3.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@playwright/test": "^1.45.3",
		"@rsbuild/core": "^0.7.10",
		"@rsbuild/plugin-preact": "^0.7.10",
		"@rsbuild/plugin-react": "^0.7.10",
		"@rsbuild/plugin-svgr": "^0.7.10",
		"@rsbuild/plugin-vue": "^0.7.10",
		"@types/node": "^20.14.14",
		"nano-staged": "^0.8.0",
		"playwright": "^1.45.3",
		"preact": "^10.23.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"simple-git-hooks": "^2.11.1",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"vue": "^3.4.35"
	},
	"peerDependencies": {
		"@rsbuild/core": "0.x || 1.x"
	},
	"peerDependenciesMeta": {
		"@rsbuild/core": {
			"optional": true
		}
	},
	"packageManager": "pnpm@9.6.0",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
