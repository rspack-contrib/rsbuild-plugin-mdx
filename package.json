{
	"name": "@rsbuild/plugin-mdx",
	"version": "1.0.2",
	"repository": "https://github.com/rspack-contrib/rsbuild-plugin-mdx",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"lint:write": "biome check . --write",
		"prepare": "simple-git-hooks && npm run build",
		"test": "playwright test",
    "bump": "npx bumpp"
	},
	"simple-git-hooks": {
		"pre-commit": "npx nano-staged"
	},
	"nano-staged": {
		"*.{js,jsx,ts,tsx,mjs,cjs}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@mdx-js/loader": "^3.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@playwright/test": "^1.48.2",
		"@rsbuild/core": "^1.0.19",
		"@rsbuild/plugin-preact": "^1.1.1",
		"@rsbuild/plugin-react": "^1.0.6",
		"@rsbuild/plugin-svgr": "^1.0.5",
		"@rsbuild/plugin-vue": "^1.0.3",
		"@types/node": "^22.8.6",
		"nano-staged": "^0.8.0",
		"playwright": "^1.48.2",
		"preact": "^10.24.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"simple-git-hooks": "^2.11.1",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3",
		"vue": "^3.5.12"
	},
	"peerDependencies": {
		"@rsbuild/core": "1.x"
	},
	"peerDependenciesMeta": {
		"@rsbuild/core": {
			"optional": true
		}
	},
	"packageManager": "pnpm@9.12.3",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
